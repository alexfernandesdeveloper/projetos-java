package Application;

import java.util.Locale;
import java.util.Scanner;

import Entities.Student;

public class Program {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Student st = new Student();
		Scanner sc = new Scanner();
		
		
		st.nome = sc.nextLine();
		st.n1 = sc.nextDouble();
		st.n2 = sc.nextDouble();
		st.n3 = sc.nextDouble();
		
		
		
		
		
		
		sc.close();

	}

}
